{% extends 'layout.html.twig' %}

{% set page = 'Home' %}
{% set message = 'Please login below to gain access to the system!' %}

{% block herounit %}

    <section id="content">
        <article class="hero-unit text-center">
            <h2>
                Welcome, guest!
            </h2>
            {{ message }}<br />
            If you don't have an account, please feel free to request one by <a href="{{ path('contact') }}">contacting</a>
            us!
        </article>
    </section>

{% endblock %}

{% block content %}

    {% if error %}
    <div class="error">{{ error }}</div>
    {% endif %}

    <h1>

    </h1>
        <article class="login-wrapper">

            <form class="navbar-form text-center" method="post">
                <input class="login" id="username" type="text" name="_username" value="" placeholder="Username">
                <input class="login" type="password" name="_password" placeholder="Password">
                <button type="submit" class="btn">Sign in</button>
            </form>

        </article>
        <hr />
    </section>
{% endblock %}